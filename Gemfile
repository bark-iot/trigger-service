gem 'bcrypt'

# Db
gem 'sequel'
gem 'pg'

# Trailblazer
gem 'dry-validation'
gem 'trailblazer', '~> 2.0'
gem 'trailblazer-loader'

# Representer
gem 'multi_json'
gem 'roar', github: 'trailblazer/roar'

# Cli
gem 'thor'

# Network
gem 'rest-client'

# Redis
gem 'redis'

group :test, :development do
  gem 'pry'
end

group :test do
  gem 'rack-test'
  gem 'rspec'
  gem 'webmock'
end